<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="application.AccountManagementController" spacing="20">
    <Label text="Account Management" styleClass="header"/>
    <Button fx:id="addAccountButton" text="Add Account" onAction="#handleAddAccount"/>
    <Button fx:id="viewAccountsButton" text="View Accounts" onAction="#handleViewAccounts"/>
    <Button fx:id="removeAccountButton" text="Remove Account" onAction="#handleRemoveAccount"/>
    <Label fx:id="statusLabel" styleClass="status-label"/>
</VBox>
