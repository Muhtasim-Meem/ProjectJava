<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="application.DepositController" spacing="20">
    <Label text="Deposit Money" styleClass="header"/>
    <TextField fx:id="accountNumberField" promptText="Account Number"/>
    <TextField fx:id="amountField" promptText="Amount"/>
    <Button text="Deposit" onAction="#handleDeposit"/>
    <Label fx:id="statusLabel" styleClass="status-label"/>
</VBox>
