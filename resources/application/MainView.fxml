<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="application.MainController" spacing="20">
    <Label text="Bank Management System" styleClass="header"/>
    <Button fx:id="depositButton" text="Deposit" onAction="#handleDeposit"/>
    <Button fx:id="withdrawButton" text="Withdraw" onAction="#handleWithdraw"/>
    <Button fx:id="transferButton" text="Transfer" onAction="#handleTransfer"/>
    <Button fx:id="transactionHistoryButton" text="Transaction History" onAction="#handleTransactionHistory"/>
    <Button fx:id="accountManagementButton" text="Account Management" onAction="#handleAccountManagement"/>
    <Label fx:id="statusLabel" styleClass="status-label"/>
</VBox>
