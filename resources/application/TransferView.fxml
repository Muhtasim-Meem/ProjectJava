<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="application.TransferController" spacing="20">
    <Label text="Transfer Money" styleClass="header"/>
    <TextField fx:id="senderAccountField" promptText="Sender Account Number"/>
    <TextField fx:id="receiverAccountField" promptText="Receiver Account Number"/>
    <TextField fx:id="amountField" promptText="Amount"/>
    <Button text="Transfer" onAction="#handleTransfer"/>
    <Label fx:id="statusLabel" styleClass="status-label"/>
</VBox>
